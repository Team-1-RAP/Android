<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account_mutation.AccountMutationFragment">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_item_month"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@id/spinner_item_type_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/rv_result_transaction"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_item_type_transaction"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_item_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinner_item_month"
        app:layout_constraintTop_toTopOf="@+id/spinner_item_month" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_result_transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_item_month" />
</androidx.constraintlayout.widget.ConstraintLayout>