<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_faq_color" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="backgroundTint">@color/faq_color</item>
    </style>

    <style name="button_logout_color" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="backgroundTint"/>
        <item name="background">@drawable/red_rounded_corner</item>
    </style>
</resources>