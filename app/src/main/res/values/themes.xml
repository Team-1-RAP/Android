<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_status_bar</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="popupMenuBackground">@drawable/custom_pop_up_background</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_pop_up_background</item>
    </style>

    <style name="button_faq_color" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="backgroundTint">@color/faq_color</item>
    </style>

    <style name="button_logout_color" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="backgroundTint">@color/light_blue</item>
    </style>


    <style name="BlackSearchViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/calibri</item>

    </style>




    <!--    parent text content-->
    <style name="TextContent" parent="Theme.SimpleBank">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    Super Small-->
    <style name="TextContent.SuperSmall">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextContent.SuperSmall.ShadowBlue">
        <item name="android:textColor">@color/shadow_of_blue</item>
    </style>
    <style name="TextContent.SuperSmall.ShadowBlue.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.12</item>
    </style>
    <!--    Small-->
    <style name="TextContent.TitleSmall">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextContent.TitleSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleSmall.Bold.Light">
        <item name="android:textColor">@color/white</item>
    </style>



    <!--Medium-->
    <style name="TextContent.TitleMedium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextContent.TitleMedium.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextContent.TitleMedium.Black_71">
        <item name="android:textColor">@color/black_71</item>
    </style>

    <style name="TextContent.TitleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextContent.TitleMedium.Bold.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleMedium.ShadowBlue">
        <item name="android:textColor">@color/shadow_of_blue</item>
    </style>
    <style name="TextContent.TitleMedium.ShadowBlue.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Large-->
    <style name="TextContent.TitleLarge">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextContent.TitleLarge.Light">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleLarge.Bold.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleSuperLarge">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>